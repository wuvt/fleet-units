[Unit]
Requires=flanneld.service
After=flanneld.service
Wants=postgres-discovery.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill postgres
ExecStartPre=-/usr/bin/docker rm postgres
ExecStart=/usr/bin/docker run --name=postgres --env-file=/media/local-storage/postgres.env --volume=/media/local-storage/postgres-data:/var/lib/postgresql/data postgres
ExecStop=/usr/bin/docker stop postgres
Restart=always

