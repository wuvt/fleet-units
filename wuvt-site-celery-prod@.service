[Unit]
Description=wuvt-site celery production
After=docker.service
After=flanneld.service
Requires=docker.service
Requires=flanneld.service

[Service]
Environment="ETCDCTL_CERT_FILE=/etc/ssl/etcd/%H.pem"
Environment="ETCDCTL_KEY_FILE=/etc/ssl/etcd/%H-key.pem"
Environment="ETCDCTL_CA_FILE=/etc/ssl/etcd/ca.pem"
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill wuvt-site-celery-prod
ExecStartPre=-/usr/bin/docker rm wuvt-site-celery-prod
ExecStartPre=-/usr/bin/docker pull registry.wuvt.vt.edu/wuvt-site-celery
ExecStart=/bin/sh -c "export DATABASE_URL=\"$(etcdctl get '/services/postgres/postgres')\" REDIS_URL=\"$(etcdctl get '/services/redis/wuvt-site-prod')\"; test -n "$DATABASE_URL" && test -n "$REDIS_URL" && /usr/bin/docker run --read-only --name=wuvt-site-celery-prod --env=DATABASE_URL --env=REDIS_URL --volume=/home/core/wuvt-data/config:/data/config wuvt-site-celery"
ExecStop=/usr/bin/docker stop wuvt-site-celery-prod
Restart=always

[X-Fleet]
Conflicts=wuvt-site-celery-prod@*.service
