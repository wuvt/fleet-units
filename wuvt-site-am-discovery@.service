[Unit]
Description=Announce wuvt-site AM
BindsTo=wuvt-site-am@%i.service
After=wuvt-site-am@%i.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/https/wuvt-site-am@%i 'https://%H.wuvt.vt.edu:8444' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/https/wuvt-site-am@%i

[X-Fleet]
MachineOf=wuvt-site-am@%i.service
