[Unit]
Description=wuvt-site AM
Before=wuvt-site-am-discovery@%i.service
After=docker.service
After=flanneld.service
Wants=wuvt-site-am-discovery@%i.service
Requires=docker.service
Requires=flanneld.service
ConditionPathExists=/run/wuvt-site-am-services.json

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill wuvt-site-am
ExecStartPre=-/usr/bin/docker rm wuvt-site-am
ExecStartPre=-/usr/bin/docker pull registry.wuvt.vt.edu/wuvt-site
ExecStart=/usr/bin/docker run --read-only --name=wuvt-site-am -p 8444:8443 --volume=/home/core/wuvt-am-data/config:/data/config --volume=/run/wuvt-site-am-services.json:/data/config/services.json --volume=/media/website-media-prod:/data/media --volume=/home/core/wuvt-data/ssl:/data/ssl wuvt-site
ExecStop=/usr/bin/docker stop wuvt-site-am
Restart=always

[X-Fleet]
Conflicts=wuvt-site-am@*.service
