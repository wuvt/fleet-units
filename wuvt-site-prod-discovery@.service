[Unit]
Description=Announce wuvt-site production
BindsTo=wuvt-site-prod@%i.service
After=wuvt-site-prod@%i.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/https/wuvt-site-prod@%i 'https://%H.wuvt.vt.edu:8443' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/https/wuvt-site-prod@%i

[X-Fleet]
MachineOf=wuvt-site-prod@%i.service
