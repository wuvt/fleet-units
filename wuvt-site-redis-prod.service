[Unit]
Requires=flanneld.service
After=flanneld.service
Wants=wuvt-site-redis-prod-discovery.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill wuvt-site-redis-prod
ExecStartPre=-/usr/bin/docker rm wuvt-site-redis-prod
ExecStart=/usr/bin/docker run --name=wuvt-site-redis-prod --volume=/media/local-storage/wuvt-site-redis-prod-data:/data --volume=/media/local-storage/wuvt-site-redis-prod-config/redis.conf:/etc/redis/redis.conf redis /etc/redis/redis.conf
ExecStop=/usr/bin/docker stop wuvt-site-redis-prod
Restart=always

